FROM node:22-slim AS base

WORKDIR /app

# Disable lightningcss fallback issues
ENV TAILWIND_DISABLE_LIGHTNINGCSS=true

# Install OS dependencies (recommended for Next.js)
RUN apt-get update && apt-get install -y \
    build-essential \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package.json package-lock.json* ./

# Install node modules
RUN npm install

# Copy full project
COPY . .

# Build Next.js app
RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]
