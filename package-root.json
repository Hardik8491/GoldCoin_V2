{
  "name": "goldcoin",
  "version": "1.0.0",
  "private": true,
  "description": "GoldCoin - Personal finance management application",
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && echo 'Backend build complete'",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "cd apps/web && npm start",
    "start:api": "cd apps/api && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "test": "npm run test:web && npm run test:api",
    "test:web": "cd apps/web && npm run test",
    "test:api": "cd apps/api && pytest",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "cd apps/web && npm run lint",
    "lint:api": "cd apps/api && ruff check .",
    "typecheck": "cd apps/web && npx tsc --noEmit",
    "install:all": "npm install && cd apps/api && pip install -r requirements.txt",
    "clean": "rm -rf apps/web/.next apps/web/node_modules node_modules apps/api/__pycache__ apps/api/**/__pycache__",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd apps/api && alembic upgrade head",
    "db:seed": "cd apps/api && python scripts/seed.py",
    "format": "npm run format:web && npm run format:api",
    "format:web": "cd apps/web && prettier --write .",
    "format:api": "cd apps/api && ruff format ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/goldcoin"
  },
  "keywords": [
    "finance",
    "ai",
    "nextjs",
    "fastapi",
    "typescript",
    "python",
    "monorepo"
  ],
  "author": "Your Name",
  "license": "MIT"
}
